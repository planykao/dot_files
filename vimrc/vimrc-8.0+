" -------------------------------------------------------------------
" tagbar
" -------------------------------------------------------------------
nmap <F8> :TagbarToggle<CR>
let g:tagbar_left=1

" -------------------------------------------------------------------
" nerdtree
" -------------------------------------------------------------------
" let g:NERDTreeWinPos = "right"

" -------------------------------------------------------------------
" keymap
" -------------------------------------------------------------------
map <F3> <ESC> :GitGrep <C-R><C-W><CR>
" map <F4> :NERDTreeToggle<CR>
" map <F4> <ESC>:Leaderf<CR>
map <F6> :vimgrep /<C-r><C-w>/ %<CR>:ccl<CR>:cwin<CR><C-W>J:nohls<CR>
